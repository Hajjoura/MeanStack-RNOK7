<table data-ng-hide="loading" class="table table-striped">
  
<div class="row"  data-ng-hide="loading">
  <div class="col-sm-6 col-md-4"data-ng-repeat="offer in offers">
    <div class="thumbnail" >
      <img src="https://www.ywcatoronto.org/upload/employment/images/jobs.png" alt="JobOffer">
      <div class="caption">
        <h3>{% raw %}{{ offer.title }}{% endraw %}</h3>
        <p>{% raw %}{{ offer.description }}{% endraw %}</p>
        <center><a href="{% raw %}{{ offer.link }}{% endraw %}" class="btn btn-primary" role="button">Apply Now</a></center> 
		  
      </div>
    </div>
  </div>
</div>
      
</table>
